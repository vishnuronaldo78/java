import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		char[][] arr = new char[n][n];
		for(int i = 0; i < n; i++) {
		    for(int j = 0; j < n; j++) {
		        arr[i][j] = ' ';
		     arr[i][0+i] = '*';
		     arr[i][n-i-1] = '*';
		    }
		}
		for(int i = 0; i < n; i++) {
		    for(int j = 0; j < n; j++) {
		        System.out.print(arr[i][j]);
		    }
		    System.out.println();
		}
	}
}
